<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.p4rfait.musicapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
    <action
        android:id="@+id/action_home_to_artists"
        app:destination="@id/navigation_artists" />
</fragment>

    <fragment
        android:id="@+id/navigation_artists"
        android:name="com.p4rfait.musicapp.ui.home.ArtistsFragment"
        android:label="@string/title_artists"
        tools:layout="@layout/activity_artists" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.p4rfait.musicapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.p4rfait.musicapp.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>